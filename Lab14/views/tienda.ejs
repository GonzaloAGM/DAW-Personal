
<%- include('includes/header.ejs') %>
<%- include('includes/navTab.ejs') %>

        <section class="tabcontent" id="Tienda">
            <h2 class="titulo_sec" name="titulo_h2">Realiza una compra</h2>
                <div class="row">
                    
                    <%- include('includes/tarjetasTienda.ejs') %>

                    <div class="col s12 m6 l4 xl3">
                        <form action="/tienda" method="POST">
                            <table>
                                <tr><th>Articulo </th><th>Precio   </th><th>Cantidad</th></tr>
                                <% for (let articulo of articulos) { %>
                                    <tr>
                                        <td><%= articulo.nombre %></td> 
                                        <td>$<%= articulo.precio %></td>
                                        <td id="<%= articulo.num %>" name="<%= articulo.num %>">0</td>
                                        <td display="none"><input type="number" name="<%= "input" + articulo.num %>" id="<%= "input" + articulo.num %>" value="0" min="0"></td>
                                    </tr>
                                <% } %>
                                <tr><td>Descuento</td><td>%</td><td><input type="number" id="descuento" name="descuento" value="0" min="0" max="100"></td></tr>
                                <tr><td>IVA</td><td>%</td><td><input type="number" id="iva" name ="iva" value="16" min="0" max="100"></td></tr>
                            </table>
                            <br>
                            <p class="flow-text" id="subpago">Subtotal: </p>
                            <div style="display: none;">
                                <input type="number" id="subtinput" name="subtinput" value="0" min="0">
                            </div>
                            <button class="btn waves-effect waves-light blue btn-large right" type="submit" name="action">Pagar
                                <i class="material-icons right">attach_money</i></button>
                        </form>
                    </div>
                </div>
            
        </section>

<%- include('includes/footer.ejs') %>